# AI Data Curation Platform Environment Configuration

# Server Configuration
PORT=3000
NODE_ENV=production
FRONTEND_URL=http://localhost:3000

# Grok API Configuration (X.AI)
GROK_API_KEY=your_grok_api_key_here
GROK_MODEL=grok-beta

# Email Configuration (for employee surveys and notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here

# Zoom Integration (for Enterprise tier consultations)
ZOOM_API_KEY=your_zoom_api_key
ZOOM_API_SECRET=your_zoom_api_secret
ZOOM_ACCOUNT_ID=your_zoom_account_id

# Database Configuration
NODE_ENV=development
DB_CLIENT=sqlite3
DATABASE_URL=your_database_url_here

# For PostgreSQL (production)
DB_HOST=localhost
DB_PORT=5432
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=ai_data_curation
DB_SSL=false

# For MySQL (alternative)
# DB_CLIENT=mysql2
# DB_HOST=localhost
# DB_PORT=3306

# File Upload Configuration
MAX_FILE_SIZE=50MB
UPLOAD_PATH=./uploads

# Security & Authentication
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRES_IN=7d
ENCRYPTION_KEY=your_encryption_key_here
BCRYPT_ROUNDS=12

# External Services
OPENAI_API_KEY=your_openai_key_for_fallback
ANTHROPIC_API_KEY=your_anthropic_key_for_fallback

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log