# AI Data Curation Platform Environment Configuration

# Server Configuration
PORT=3000
NODE_ENV=production
FRONTEND_URL=http://localhost:3000

# Grok API Configuration (X.AI)
GROK_API_KEY=your_grok_api_key_here
GROK_MODEL=grok-beta

# Email Configuration (for employee surveys and notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here

# Zoom Integration (for Enterprise tier consultations)
ZOOM_API_KEY=your_zoom_api_key
ZOOM_API_SECRET=your_zoom_api_secret
ZOOM_ACCOUNT_ID=your_zoom_account_id

# Database Configuration (if using external database)
DATABASE_URL=your_database_url_here

# File Upload Configuration
MAX_FILE_SIZE=50MB
UPLOAD_PATH=./uploads

# Security
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# External Services
OPENAI_API_KEY=your_openai_key_for_fallback
ANTHROPIC_API_KEY=your_anthropic_key_for_fallback

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log